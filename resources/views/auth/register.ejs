<div class="container d-flex justify-content-center align-items-center vh-100">
    <form style="min-width: 350px; background-color: #28282E;" method="POST" action="/register" class="px-4 py-4 rounded shadow-lg">
        <h4 class="text-white mb-4">Register</h4>
        <% if(messages.error) { %>
        <span class="text-danger text-sm"><%= messages.error %></span>
        <% } %>
        <div class="form-floating mb-2">
            <input name="name" type="text" placeholder="Enter your name" value="<%= messages.name %>"
                class="form-control" id="name">
            <label for="name">Name</label>
        </div>
        <div class="form-floating mb-2">
            <input name="email" type="email" placeholder="Enter your email address" value="<%= messages.email %>"
                class="form-control" id="email">
            <label for="email">Email Address</label>
        </div>
        <div class="form-floating mb-2">
            <input name="password" type="password" placeholder="Enter your password" class="form-control"
                id="password">
            <label for="password">Password</label>
        </div>
        <div class="form-floating mb-2">
            <input name="confirm_password" type="password" placeholder="Enter confirm password"
                class="form-control" id="confirm-password">
            <label for="confirm-password">Confirm Password</label>
        </div>

        <div class="d-flex flex-column align-items-center">
            <button type="submit" class="btn btn-dark mt-4" style="background-color: #8C6CF7; color: white;">Register</button>
            <a href="/login" class="text-white mt-2">Already have an account?</a>
        </div>
    </form>
</div>

