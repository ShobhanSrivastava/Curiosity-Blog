<div class="container py-5">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form id="editor-form" action="/write" method="POST" class="w-full flex flex-col">
                <% if(messages.error) { %>
                    <span class="text-danger"><%= messages.error %></span>
                <% } %>
                <div class="form-floating mb-4">
                    <input id="title" name="title" type="text" placeholder="Enter the title for your article" class="form-control">
                    <label for="title">Title</label>
                </div>
                <textarea id="my-expressjs-tinymce-app"></textarea>
                <input id="content" type="hidden" name="content" />
                <div class="d-flex justify-content-center">
                    <button id="blog-submit" style="background-color: #8C6CF7; color: white;" class="btn mt-4">Publish</button>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
    
<script src="/js/addBlog.js"></script>

<!-- Text area matching the selector specified in the TinyMCE configuration -->
<!-- Script element sourcing TinyMCE -->
<script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
<!-- Script element sourcing the TinyMCE configuration -->
<script type="application/javascript" src= "/js/my-tinymce-config.js"></script>