<div class="w-[60vw] h-full">
    <p class="px-2">Your Blogs</p>
    <div class="container">
        <% if(blogs) { %>
        <% blogs.forEach(function(blog) { %>
            <a href="/blog/<%= blog._id %>">
                <div class="px-4 py-4 border-t-[0.5px] border-gray-200">
                    <p class="text-lg"><%= blog.title %></p>
                    <p class="text-xs py-2"><%- blog.content %></p>
                </div>
            </a>
        <% })} else { %>
            <p>Unleash the power of your words and paint the world with your unique story!</p>
            <a href="/write">
                <button class="px-4 py-2 border-2 border-black mt-8 hover:bg-black hover:text-white rounded">
                    Write your first blog
                </button>
            </a>
        <% } %>
    </div>
</div>